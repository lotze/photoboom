<h1>Missions for <%= link_to @game.name, edit_game_path(@game.id) %></h1>

<p><%= link_to 'Change order', missions_order_path(game_id: @game.id) %></p>

<table>
  <thead>
    <tr>
      <th>Codenum</th>
      <th>Name</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.codenum %></td>
        <td><%= mission.name %></td>
        <td><%= mission.points %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_mission_path(game_id: @game.id) %>
