<h1>Missions for <%= link_to @game.name, edit_game_path(@game.id) %></h1>

<p><%= link_to 'Change order', missions_order_path(game_id: @game.id) %></p>

<table>
  <thead>
    <tr>
      <th>Codenum</th>
      <th colspan="2"></th>
      <th>Points/Name/Description</th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.codenum %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>(<%= mission.points %>) <%= mission.name %>: <%= mission.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Mission', new_mission_path(game_id: @game.id) %></p>

<p><%= link_to 'Import Missions', missions_import_path(game_id: @game.id) %></p>
