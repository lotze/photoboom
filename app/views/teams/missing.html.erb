<% @missing_users.each do |user| %>
  <%= form_tag(force_add_path) do %>
  <br /><%= user.name %> / <%= user.email %>: 
  <%= hidden_field_tag 'game_id', @game.id %>
  <%= hidden_field_tag 'user_id', user.id %>
  <%= select_tag :team_id, options_for_select(@game.teams.map {|t| [t.name, t.id]}) %>
  <%= submit_tag 'Add to Team' %>
  <% end %>
<% end %>